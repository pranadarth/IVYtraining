@page
@model OnlineShopping.Pages.EditProdAdminModel
@{
    ViewData["Title"] = "Edit Items";
}

<div class="all">
    <!-- (A) SIDEBAR -->
    <div id="pgside">
        <!-- LINK TO DASHBOARD OR LOGOUT -->
        <div id="pguser">
            <img src="Images/potato.png" />
            <i class="txt">Hello, Admin</i>
        </div>
        <hr style="background:#bd97db" />
        <!-- (A2) MENU ITEMS -->
        <a href="Admin">
            <i class="ico">&#9733;</i>
            <i class="txt">Info</i>
        </a>
        <hr class="sidebar" />

        <a href="/ViewProdAdmin">
            <i class="ico">&#9728;</i>
            <i class="txt">Product Details</i>
        </a>
        <hr class="sidebar" />
        <a href="/AddPageAdmin">
            <i class="ico">&#9737;</i>
            <i class="txt">Add Products</i>
        </a>

        <a href="/index" class="Logout">
            <i class="ico">&#9737;</i>
            <i class="txt">Logout</i>
        </a>
    </div>

    <!-- (B) MAIN -->
    <main id="pgmain">
        <h>Edit Product</h>
        <br>

        @if (Model.success_msg.Length > 0)
        {
   
                    <div class="alert alert-success alert-dismissible">
                        @Model.success_msg
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
            Thread.Sleep(1000);
            Response.Redirect("/ViewProdAdmin");
              
        }
        @if (Model.error_msg.Length > 0)
        {
            
                    <div class="alert alert-danger alert-dismissible">
                        @Model.error_msg
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                
        }
        <form method="post">

            <div class="row-cols-1">
                <label class="col-form-label">Product Name:  </label>
                <div>
                    <input type="text" class=" form-control" name="name" value="@Model.update.p_name" disabled>
                </div>
                <label class="col-form-label"> Product price:  </label>
                <div>
                    <input type="number" class=" form-control" name="amount" value="@Model.update.amount" required>
                </div>
                <label class="col-form-label"> Category:  </label>
                <div>
                    <input type="text" class=" form-control" name="cat" value="@Model.update.cat" disabled>
                </div>
                <label class="col-form-label"> Count:  </label>
                <div>
                    <input type="number" class=" form-control" name="count" value="@Model.update.count" required>
                </div>
                
                <br>
                <br>
                <div>
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="reset" class="btn btn-primary">Reset</button>
                    <a href="/ViewProdAdmin" type="reset" class="btn btn-danger">Back</a>
                </div>
            </div>
        </form>

    </main>
</div>


