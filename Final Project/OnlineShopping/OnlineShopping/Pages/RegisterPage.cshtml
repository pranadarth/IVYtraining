@page
@model OnlineShopping.Pages.RegisterPageModel
@{
    ViewData["Title"] = "SignUp page";
}
@if (Model.Re_pass.Length > 0)
{
    <div class="alert alert-danger alert-dismissible" style="height:fit-content">
        @Model.Re_pass
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

}
@if (Model.success.Length > 0)
{
    <div class="alert alert-success alert-dismissible" style="height:fit-content">
        @Model.success
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

}
<div class="all">
<form method="post">
    <div class="container">
        <div class="head">
                <br />
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr />
        </div>

        <div class="field">
        @*<label for="name"><b>Username:</b></label>*@
                <input type="text" placeholder="👤 Enter Name" name="name" required>
        <br />
        @*<label for="email"><b>E-mail:</b></label>*@
                <input type="email" placeholder="📧 Enter Email Id" name="email" required>
        <br />
        @*<label for="phone"><b>Phone:</b></label>*@
                <input type="tel" placeholder="📞 Enter Mobile No." name="phone" minlength="10" maxlength="10" required>
        <br />
        @*<label for="psw"><b>Password:</b></label>*@
                <input type="password" placeholder="🗝 Enter Password" minlength="6" name="psw" required>
        <br />
        @*<label for="psw-repeat"><b>Re-Enter Password:</b></label>*@
                <input type="password" placeholder="🗝 Repeat Password" name="psw-repeat" required>
            <p style="text-align:center">By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
        </div>
        
       
        

        <div class="clearfix">
            <button  type="submit" class="btn btn-success">CREATE ACCOUNT</button>
                <br />
                <br />
                <p style="text-align:center">Already have an account? <a href="/Index" style="color:dodgerblue">Login</a></p>
                <br />
        </div>
    </div>
</form>
</div>