<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game" Loaded="Window_Loaded"
        mc:Ignorable="d" Background="Black" KeyDown="Window_KeyDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle x:Name="player" Height="50" Width="20" Fill="White" RenderTransformOrigin="0.5,0.5"  >
            
            <Rectangle.RenderTransform >
                <TransformGroup>
                    <RotateTransform x:Name="PlayerAngle" />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</Window>
