<Window x:Class="GeoPlugin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoPlugin"
        xmlns:loco="clr-namespace:FilePathFinder;assembly=FilePathFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox Stretch="Uniform">
      <Grid>
            <loco:UserControl1 />
            <Button Content="Login" Width="100" Height="50" Click="LoginBtn" FontSize="20"  FontWeight="Medium"
               HorizontalAlignment="Center"  BorderBrush="Black" BorderThickness="2" Margin="0,200,0,0" />

        <Label x:Name="Result"  Height="80" Width="210" Background="LightBlue" HorizontalAlignment="Center"
               FontSize="18" FontWeight="Medium" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               BorderBrush="Black" BorderThickness="3"/>
            
               
                
           
      </Grid>
    </Viewbox>

</Window>
