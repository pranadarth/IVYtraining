<Window x:Class="OwnBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwnBrowser"
        mc:Ignorable="d"
        Title="MainWindow" >
      <Viewbox Stretch="Uniform">
    <Grid >
            <TextBox x:Name="get" Width="300" Height="30" BorderBrush="Black" BorderThickness="2"  FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="0,0,40,30" VerticalAlignment="Bottom"/>
        <Button x:Name="src" Content="Search" Height="30" Width="80" FontSize="15" VerticalAlignment="Bottom" Click="Button_Click" Margin="450,0,50,30" VerticalContentAlignment="Center"/>

        <TextBlock x:Name="Disp" Height="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="400" FontSize="20" Margin="0,0,0,100" HorizontalAlignment="Center" 
                   TextWrapping="Wrap" TextAlignment="Justify"/>

         <Button x:Name="readbtn" Content="Read" Height="30" Width="80" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,50,30" VerticalContentAlignment="Center" Click="Read"/>

        </Grid>
    </Viewbox>
</Window>
